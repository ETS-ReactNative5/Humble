<controller name="registration" use="Twig" author="Rick Myers" email="rick@enicity.com">
    <actions>
        <action name="activation">
            <description>Just records a few things about the site doing the installation by serial number</description>
            <entity namespace="account" class="registration" method="activate">
                <parameter source='get' format="JSON" required='true' />
            </entity>
        </action>

        <!-- ############################################################### -->

    </actions>
</controller>